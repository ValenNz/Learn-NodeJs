<div class="container">
    <div class="row">
        <div class="col-md-8">  
            <h1>Daftar Contact</h1>
            <a href="/contact/add" class="btn btn-dark mb-2"><i class="bi bi-database-fill-add"></i> add</a>

            <% if (msg.length !== 0 ) { %>
                <div class="alert alert-success" role="alert"><%= msg %></div>
            <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (contacts.length ===0 ) { %> <!-- Jika array kosong-->
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger" role="alert">
                                    Data Contact empety 
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    
                    <% contacts.forEach((contact,i) => { i++ %>
                        <tr>
                            <th scope="row"><%= i++ %></th>
                            <td><%= contact.nama %></td>
                            <td><%= contact.hp%></td>
                            <td><a href="../contact/<%= contact.nama %>" class="btn btn-dark badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a></td>
                        </tr>
                    <% }) %>    
                </tbody>
              </table>
        </div>
    </div>
</div>