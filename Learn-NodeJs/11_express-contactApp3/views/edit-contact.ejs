<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit data</h2>
            <% if (typeof errors != 'undefined') { %> <!-- Apakah tipe error in ibuan undifened-->
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>"> <!-- Cek didalam object kontak apakah ada oldNama jika ada yang menjadi value oldnama tapi jika kalau nggak ada nama -->
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama : </label>
                  <input type="text" class="form-control" id="nama" name="nama"  required value="<%= contact.nama %>" >
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">email : </label>
                  <input type="email" class="form-control" id="email" name="email"  required value="<%= contact.email %>"> 
                </div>
                <div class="mb-3">
                  <label for="hp" class="form-label">No Hp : </label>
                  <input type="text" class="form-control" id="hp" name="hp"  required value="<%= contact.hp %>">
                </div>
                <button type="submit" class="btn btn-dark">Edit</button>
              </form>
        </div>
    </div>
</div>